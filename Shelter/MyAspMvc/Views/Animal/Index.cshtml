@model Shelter.Shared.Shelter

@{
    ViewData["Title"] = "Home Page";
}

<table>
  <tr>
    <th>Name</th>
    <th>Delete?</th>
    <th>Edit</th>
  </tr>
  @foreach (var item in Model.Animals)
  {
    <tr>
      <td><a  asp-controller="Animal" asp-action="Details" asp-route-Id="@item.Id">@item.Name</a></td>
      <td><a asp-controller="Animal" asp-action="Delete" asp-route-id=@item.Id>Delete</a></td>
      <td><a asp-controller="Animal" asp-action="Edit" asp-route-id=@item.Id>Edit</a></td>
    </tr>
  }
</table>

